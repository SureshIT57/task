<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_5"
                android:layout_marginVertical="@dimen/margin_5"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/margin_5"
                app:cardCornerRadius="@dimen/margin_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_inner"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="@dimen/homescreen_cardview_corner_radius">


                        <ImageView
                            android:id="@+id/iv_stallImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:background="@drawable/background"
                            />


                    </androidx.cardview.widget.CardView>

                     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="@dimen/margin_10"
    android:weightSum="1.0"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.5"
        >

                        <TextView
                            android:id="@+id/tv_stallDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_5"
                            android:layout_marginVertical="@dimen/margin_3"
                            android:text="jun 24 -jun 25,2024"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSizeNormal"
                             />

                        <TextView
                            android:id="@+id/tv_stallTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_5"
                            android:layout_marginVertical="@dimen/margin_3"
                            android:text="TechTrends"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/textSizeSmall" />
                    <TextView
                        android:id="@+id/tv_stallCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_5"
                        android:layout_marginVertical="@dimen/margin_5"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="TechTrends Technologies"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizeSmall" />

                    <TextView
                        android:id="@+id/tv_stallFiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_5"
                        android:layout_marginVertical="@dimen/margin_5"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="15 Files"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizeSmall"
                       />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:gravity="right|bottom"
        android:layout_weight="0.5"
        >
        <ImageView
            android:id="@+id/iv_addImage"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:background="@drawable/circle"
            android:layout_margin="@dimen/margin_15"/>

    </LinearLayout>

</LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
</LinearLayout>